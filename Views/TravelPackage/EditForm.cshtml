@{
    ViewData["Title"] = "Modify Travel Package";
    Layout = "_Layout";
}

@model TravelPackage

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form method="post" asp-controller="TravelPackage" asp-action="Edit" asp-route-id="@Model.Id">
        @Html.AntiForgeryToken()
        <div class="form-floating mb-3">
            <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="Name">
            <label for="Name">Name</label>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="Description" class="form-control" id="Description" placeholder="Description">
            <label for="Description">Description</label>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" asp-for="Photo" class="form-control" id="Photo" placeholder="Photo">
            <label for="Photo">Photo</label>
            <span asp-validation-for="Photo"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="number" asp-for="Price" class="form-control" id="Price" placeholder="Price">
            <label for="Price">Price</label>
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="number" asp-for="PeopleNumber" class="form-control" id="PeopleNumber" placeholder="PeopleNumber">
            <label for="PeopleNumber">Number of people</label>
            <span asp-validation-for="PeopleNumber"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="number" asp-for="Duration" class="form-control" id="Duration" placeholder="Duration">
            <label for="Duration">Travel duration</label>
            <span asp-validation-for="Duration"></span>
        </div>

        <div class="d-flex justify-content-around">
            <button class="btn btn-primary" action="submit">Edit</button>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
