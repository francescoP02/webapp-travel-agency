@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}
@model List<TravelPackage>
<div class="container">
    @if (Model.Count > 0)
    {
        <div class="row row-cols-4 justify-content-around">

            @foreach (TravelPackage package in Model)
            {
                <div class="card my-3" style="width: 18rem;">
                    <img src="@package.Photo" class="card-img-top py-1" alt="...">
                    <div class="card-body text-center">
                        <h5 class="card-title">@package.Name</h5>
                        <p class="card-text">@package.Description</p>
                        <p class="card-text">Price: @package.Price € / per person</p>
                        <p class="card-text">Duration: @package.Duration</p>
                        <p class="card-text">For @package.PeopleNumber People</p>
                    </div>
                    <div class="card-footer d-flex justify-content-around">
                        <a href="@Url.Action("Show", "TravelPackage", new {id = package.Id})" type="button" class="btn btn-primary">View Package</a>
                        <a class="btn btn-warning" href="@Url.Action("EditForm", "TravelPackage", new {Id = package.Id})">Edit</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", "TravelPackage", new {Id = package.Id})">Delete</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h6 class="text-center">No package insert</h6>
    }

</div>
